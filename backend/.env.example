# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=24h

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=okahandja_municipal
DB_USER=root
DB_PASSWORD=

# Email Configuration (SMTP)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@okahandja.gov.na

# SMS Configuration
SMS_ENABLED=false
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=Okahandja

# Payment Gateway Configuration

# Nam Post Mobile Money
NAMPOST_API_KEY=
NAMPOST_MERCHANT_ID=
NAMPOST_ENABLED=true

# Card Payment Gateway (e.g., Peach Payments, PayGate)
CARD_GATEWAY_API_KEY=
CARD_GATEWAY_MERCHANT_ID=
CARD_GATEWAY_ENABLED=true

# Mobile Money (MTC, TN Mobile)
MTC_API_KEY=
MTC_MERCHANT_ID=
TN_API_KEY=
TN_MERCHANT_ID=
MOBILE_MONEY_ENABLED=true

# Bank Transfer
BANK_TRANSFER_ENABLED=true
BANK_ACCOUNT_NUMBER=
BANK_ACCOUNT_NAME=Okahandja Municipality
BANK_NAME=FNB Namibia

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Application URLs
APP_URL=http://localhost:8080
API_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Features Toggle
FEATURE_REGISTRATION_ENABLED=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_AUTO_BILL_GENERATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false

# External APIs
WEATHER_API_KEY=
MAPS_API_KEY=

# Billing Configuration
BILLING_CYCLE=monthly
GRACE_PERIOD_DAYS=7
LATE_FEE_PERCENTAGE=5
TAX_RATE=15

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please check back later.
